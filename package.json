{
  "name": "zoho-people-dashboard",
  "version": "1.0.0",
  "private": true,
  "description": "Elegant Zoho People Management Dashboard with gold and off-white design",
  "keywords": [
    "zoho",
    "people",
    "dashboard",
    "sveltekit",
    "tailwindcss",
    "nodejs"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite dev --host",
    "preview": "vite preview --host",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "setup": "npm install && echo 'Setup complete! Configure your .env file and run: npm run dev'",
    "start": "node build/index.js"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "@sveltejs/adapter-netlify": "^5.2.3",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "lucide-svelte": "^0.292.0",
    "postcss": "^8.4.31",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.0",
    "xlsx": "^0.18.5"
  }
}
